@model NavigationItemViewModel

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h2>Edit Navigation Item</h2>

<form asp-controller="Admin" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentId" class="control-label">Parent</label>
        <select asp-for="ParentId" class="form-control">
            <option value="">None</option>
            @foreach (var item in Model.ParentItems)
            {
                if (item.Id == Model.ParentId)
                {
                    <option value="@item.Id" selected="selected">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>
    <div class="form-group">
          <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
